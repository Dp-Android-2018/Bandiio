<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/SignUp_signscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/colourwhite"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_marginEnd="25dp"/>

    <ImageView
        android:id="@+id/back_SS"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linear1"
    android:layout_above="@id/sign_ss"
    android:layout_marginStart="15dp"
    android:layout_below="@id/back_SS"
    android:gravity="center"
    android:layout_marginTop="100dp">
        <EditText
            android:id="@+id/Name_ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:paddingStart="10dp"

            android:padding="10dp"
            android:textColorHint="@color/colourwhite" />

        <EditText
            android:id="@+id/E-mail_ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="8dp"
            android:hint="E-mail"
            android:paddingStart="10dp"
           android:layout_marginTop="15dp"
            android:textColorHint="@color/colourwhite" />
    <EditText
        android:id="@+id/Birthday_ss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_gift"
        android:drawablePadding="8dp"
        android:hint="Birthday"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:textColorHint="@color/colourwhite" />

        <EditText
            android:id="@+id/password_ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColorHint="@color/colourwhite" />
    <EditText
        android:id="@+id/confirmed_password_ss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="8dp"
        android:hint="Conirmed_Password"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColorHint="@color/colourwhite" />




</LinearLayout>



        <ImageButton
            android:id="@+id/sign_ss"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_person_add"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button"/>
    <ProgressBar
        android:id="@+id/simpleProgressBar_sign"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:indeterminateTint="@color/colourwhite"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>

