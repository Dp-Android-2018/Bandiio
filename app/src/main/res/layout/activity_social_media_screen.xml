<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/problems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="25sp"
            android:text="If you have  problem or suggestion please leave it"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/problems"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded_corners"
            android:hint="Phone or  Email"
           android:padding="20dp"
           android:layout_margin="10dp" />

        <EditText
            android:id="@+id/yourmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pore"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corners"
            android:hint="Enter Your messege"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="70dp"/>

        <Button
            android:id="@+id/sendbutton"
            android:layout_width="175sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yourmessage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/round_button"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/simpleProgressBar_social"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:indeterminateTint="@color/colorAccent"
            android:layout_below="@+id/yourmessage"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="20sp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/twitter"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_below="@+id/sendbutton"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="10sp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/ic_iconfinder_twitter_834708"
            android:drawablePadding="15sp"
            android:text="Twitter\n\nhttps://twitter.com"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#9E8F8F"
            android:textSize="16sp" />

        <Button
            android:id="@+id/instagram"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_below="@+id/twitter"
            android:layout_marginHorizontal="10sp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/ic_iconfinder_instagram_1298747"
            android:drawablePadding="15sp"
            android:text="Instagram\n\nhttps://www.instagram.com"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#9E8F8F"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>
</LinearLayout>
</ScrollView>
